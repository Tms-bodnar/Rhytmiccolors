<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/points"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:layout_toEndOf="@+id/tvPoints"
            android:layout_toRightOf="@+id/tvPoints"
            android:gravity="center" />

        <TextView
            android:id="@+id/tvPoints"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="@string/points" />

        <TextView
            android:id="@+id/tvCountdown"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/points"
            android:gravity="center" />

<LinearLayout
    android:id="@+id/linlay1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/tvCountdown"
    android:layout_alignRight="@id/tvCountdown">
        <ViewFlipper
            android:id="@+id/simpleViewFlipper"
            android:layout_height="50dp"
            android:layout_width="match_parent" />
</LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/linlay2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/tvPoints"
            android:gravity="left"
            >
            <ImageView
                android:id="@+id/img1"
                android:visibility="gone"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/prim7"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/linlay3"
            android:layout_height="200dp"
            android:layout_below="@+id/linlay2"
            >

            <ImageView
                android:id="@+id/button1"
                android:src="@drawable/prim1"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="3dp"
                android:onClick="onClick2"
                />

            <ImageView
                android:id="@+id/button2"
                android:src="@drawable/prim2"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="3dp"
                android:onClick="onClick1"
                 />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>