<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:backgroundTint="#c0c0c0">



<LinearLayout
            android:id="@+id/linlay1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_above="@+id/gridLay1">
        <ViewFlipper
            android:id="@+id/simpleViewFlipper"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:padding="6dp">
        </ViewFlipper>
</LinearLayout>
        <GridLayout
            android:layout_width="200dp"
            android:id="@+id/gridLay1"
            android:layout_height="200dp"
            android:columnCount="2"
            android:rowCount="2"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            >

            <ImageView
                android:id="@+id/btnView1"
                android:background="@color/prim1"
                android:layout_width="94dp"
                android:layout_height="94dp"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_margin="3dp"
                />
            <ImageView
                android:id="@+id/btnView2"
                android:background="@color/prim2"
                android:layout_width="94dp"
                android:layout_height="94dp"
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:visibility="invisible"
                />
            <ImageView
                android:id="@+id/btnView3"
                android:background="@color/prim3"
                android:layout_width="94dp"
                android:layout_height="94dp"
                android:layout_column="0"
                android:layout_row="1"
                android:layout_margin="3dp"
                />
            <ImageView
                android:id="@+id/btnView4"
                android:background="@color/prim4"
                android:layout_width="94dp"
                android:layout_height="94dp"
                android:layout_column="1"
                android:layout_row="1"
                android:layout_margin="3dp"
                android:visibility="invisible"
                />

        </GridLayout>

        <GridLayout
            android:layout_width="200dp"
            android:id="@+id/gridLay2"
            android:layout_height="200dp"
            android:columnCount="2"
            android:rowCount="2"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">
            <ImageView
                android:id="@+id/btnView5"
                android:background="@color/prim5"
                android:layout_width="94dp"
                android:layout_height="94dp"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_margin="3dp"
                android:visibility="invisible"
                />

            <ImageView
                android:id="@+id/btnView8"
                android:layout_width="94dp"
                android:layout_height="94dp"
                android:layout_column="1"
                android:layout_margin="3dp"
                android:layout_row="1"
                android:background="@color/prim8" />

            <ImageView
                android:id="@+id/btnView6"
                android:background="@color/prim6"
                android:layout_width="94dp"
                android:layout_height="94dp"
                android:layout_column="1"
                android:layout_row="0"
                android:layout_margin="3dp"
                />
            <ImageView
                android:id="@+id/btnView7"
                android:background="@color/prim7"
                android:layout_width="94dp"
                android:layout_height="94dp"
                android:layout_column="0"
                android:layout_row="1"
                android:layout_margin="3dp"
                android:visibility="invisible"
                />
        </GridLayout>
<FrameLayout
    android:layout_width="180dp"
    android:layout_height="200dp"
    android:layout_alignParentBottom="true"
    android:layout_centerInParent="true"
    >
        <GridLayout
            android:id="@+id/gridLay3"
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:columnCount="1"
            android:rowCount="2"
            >
            <TextView
                android:id="@+id/tvGrid3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                android:text="@string/points"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:gravity="center_horizontal"/>
            <TextView
                android:id="@+id/tvGrid4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1"
                android:text="@string/speed"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:gravity="center"/>

            </GridLayout>

</FrameLayout>
    </RelativeLayout>
</LinearLayout>